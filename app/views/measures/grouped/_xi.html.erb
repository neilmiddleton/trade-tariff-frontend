<%- xi_import_measures = xi_declarable.import_measures.for_country(@search.country) %>
<%- uk_import_measures = uk_declarable.import_measures.for_country(@search.country) %>

<!-- CUSTOMS DUTIES -->
<% if xi_import_measures.customs_duties.present? %>
  <%= render 'measures/meursing_form' if xi_declarable.meursing_code? %>

  <h3 class="govuk-heading-m govuk-!-margin-top-7 govuk-!-margin-bottom-3", id='customs_duties'>
    Customs duties
  </h3>

  <div class="govuk-inset-text govuk-inset-text--s nhs-grey-5 explainer">
    <%= image_tag('calculator.png') %>

    <p>The table below lists the customs duties that apply to the import of commodity <%= xi_declarable.code %>.</p>
    <p>Use our <strong>tariff duty calculator</strong> to
      <%= link_to("work out the duties and taxes applicable to the import of commodity.", "/duty-calculator/#{service_choice}/#{xi_declarable.code}/import-date") %>
  </div>
<% end %>

<!-- TRADE REMEDIES -->
<% if xi_import_measures.trade_remedies.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'Trade Remedies, safeguards and retaliatory duties',
    collection: xi_import_measures.trade_remedies.sort_by(&:key),
    css_id: 'trade_remedies' }
  %>
<% end %>

<!-- VAT & EXCISE -->
<% if uk_import_measures.vat_excise.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'VAT and excise',
    collection: uk_import_measures.vat_excise.sort_by(&:key),
    css_id: 'vat_excise' }
  %>
<% end %>

<!-- XI IMPORT CONTROLS -->
<% if xi_import_measures.import_controls.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'EU import controls',
    collection: xi_import_measures.import_controls.sort_by(&:key),
    hide_duty_rate: true,
    css_id: 'xi_import_controls' }
  %>
<% end %>

<!-- UK IMPORT CONTROLS -->
<% if uk_import_measures.import_controls.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: TradeTariffFrontend::ServiceChooser.uk? ? 'Import controls' : 'UK import controls',
    collection: uk_import_measures.import_controls.sort_by(&:key),
    hide_duty_rate: true,
    css_id: 'uk_import_controls' }
  %>
<% end %>
