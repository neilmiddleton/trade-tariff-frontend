<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"> <%= t('green_lanes_faq.page_title') %></h1>
    <p class="govuk-body-m"><%= t('green_lanes_faq.page_description') %></p>
    <p class="govuk-body-m"><%= t('green_lanes_faq.page_info').html_safe %></p>
  </div>
  <div class="govuk-grid-column-one-third">
    <div class="gem-c-related-navigation">
      <h2 class="gem-c-related-navigation__main-heading">Related links</h2>
      <nav role="navigation" class="gem-c-related-navigation__nav-section">
        <ul class="gem-c-related-navigation__link-list">
          <% related_links.each do |link| %>
            <li class="gem-c-related-navigation__link">
              <%= link[:link].html_safe %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>

<div data-controller="faq">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-accordion" data-module="govuk-accordion" id="category">
            <% faq_categories.each do |category| %>
              <div class="govuk-accordion__section">
                <div class="govuk-accordion__section-header">
                  <h2 class="govuk-accordion__section-heading">
                    <span class="govuk-accordion__section-button" id="<%= category[:div_id] %>">
                      <div class="govuk-heading-m">
                        <%= category[:heading] %>
                      </div>
                    </span>
                  </h2>
                </div>
                <% category[:questions].each do |question| %>
                  <div id="<%= question[:div_id] %>" class="govuk-accordion__section-content">
                    <p class="govuk-body"><strong><%= question[:question] %></strong></p>
                    <div class="govuk-body"><%= question[:answer].html_safe %></div>
                    <p>
                      How was this answer?
                      <button class="faq-feedback-button"
                              value='<%= "#{question[:feedback_id]}|1" %>'
                              data-action="click->faq#saveFeedback">Useful
                      </button>
                      or
                      <button class="faq-feedback-button"
                               value='<%= "#{question[:feedback_id]}|0" %>'
                              data-action="click->faq#saveFeedback">Not useful
                      </button>
                    </p>
                  </div>
                <% end %>
              </div>
            <%end%>
        </div>
    </div>
  </div>
</div>
