<% content_for :title, t("title.howtos.#{@howto}") %>

<% content_for :top_breadcrumbs do %>
  <%= generate_breadcrumbs(
      t("breadcrumb.howtos.#{@howto}"),
      [
        [t('breadcrumb.home'), find_commodity_path],
        [t('breadcrumb.help'), help_path]
      ]
    ) %>
<% end %>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-xl">Import guidance</span>
        <h1 class="govuk-heading-l"><%= t("howtos.h1.#{@howto}") %></h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <%= render partial: "/pages/howtos/#{@howto}" %>
    </div>
    <div class="govuk-grid-column-one-third noprint">
        <%= render partial: "/pages/howto_sidebar_links" %>
    </div>
</div>
