<%- uk_import_measures = uk_declarable.import_measures.for_country(@search.country) %>

<!-- UK IMPORT CONTROLS -->
<% if uk_import_measures.import_controls.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: TradeTariffFrontend::ServiceChooser.uk? ? 'Import controls' : 'UK import controls',
    collection: uk_import_measures.import_controls.sort_by(&:key),
    css_id: 'uk_import_controls',
    declarable: uk_declarable,
    hide_duty_rate: true,
    search: @search,
    show_stw_text: true,
    anchor: 'import'
  }
%>
<% end %>

<!-- CUSTOMS DUTIES -->

<% if uk_import_measures.customs_duties.present? %>
  <h3 class="govuk-heading-m govuk-!-margin-top-7 govuk-!-margin-bottom-3", id='customs_duties'>
    Customs duties
  </h3>

  <div class="govuk-inset-text govuk-inset-text--s nhs-grey-5 explainer">
    <%= image_tag('calculator.png') %>

    <p>The table below lists the customs duties that apply to the import of commodity <%= uk_declarable.code %>.</p>
    <p>Use our <strong>tariff duty calculator</strong> to
      <%= link_to("work out the duties and taxes applicable to the import of commodity.", "/duty-calculator/#{service_choice}/#{uk_declarable.code}/import-date") %>
  </div>

  <%= render 'measures/grouped/table_customs_duties', collection: uk_import_measures.customs_duties.sort_by(&:key) %>
<% end %>

<!-- QUOTAS -->
<% if uk_import_measures.quotas.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'Quotas',
    collection: uk_import_measures.quotas.sort_by(&:key),
    css_id: 'quotas'
  }
  %>
<% end %>

<!-- TRADE REMEDIES -->
<% if uk_import_measures.trade_remedies.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'Trade Remedies, safeguards and retaliatory duties',
    collection: uk_import_measures.trade_remedies.sort_by(&:key),
    css_id: 'trade_remedies' }
  %>
<% end %>

<!-- VAT & EXCISE -->
<% if uk_import_measures.vat_excise.present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'VAT and excise',
    collection: uk_import_measures.vat_excise.sort_by(&:key),
    css_id: 'vat_excise' }
  %>
<% end %>
