<div class="tariff-search-banner__container">
  <main class="govuk-width-container govuk-main-wrapper govuk-main-wrapper--auto-spacing">
    <h1 class="govuk-heading-l">
      Search the Online Tariff
    </h1>
    <%= render 'shared/search/switch_beta_search' %>
    <%= form_tag perform_search_path, method: :get, class: "tariff-search" do |f| %>
      <div class="govuk-hint" id="tariff-search-banner__q-hint">
         Enter the name of the goods or a commodity code. Commodity codes are
         10-digit numbers that classify goods so you can fill in declarations
         and other paperwork. You must use the right commodity code.
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
          <div class="searchfield govuk-form-group search-header js-search-header tariff-search-banner__input-container">

            <fieldset class="govuk-fieldset govuk-search-input" aria-describedby="tariff-search-banner__q-hint">
            <div data-controller="commodity-select-box">
              <%= label_tag 'tariff-search-banner__q', search_label_text, class: 'govuk-label govuk-visually-hidden' %>
              <%= text_field_tag :q, @search.q, id: 'q', class: "govuk-input", data: { 'commodity-select-box-target': "commodityInput" } %>
              <%= hidden_field_tag :resource_id, '', id: 'resource-id-hidden', data: { 'commodity-select-box-target': "resourceIdHidden" } %>
            </div>
          </fieldset>

          <fieldset class="govuk-fieldset search-submit">
            <input class="govuk-button" type="submit" name="submit_search" value="Search">
          </fieldset>
          </div>
        </div>
      </div>
    <% end %>
  </main>
</div>
