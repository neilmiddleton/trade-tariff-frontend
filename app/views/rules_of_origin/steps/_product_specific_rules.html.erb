<%= rules_of_origin_form_for(current_step) do |form| %>
  <%= form.govuk_collection_radio_buttons \
        :rules,
        form.object.options,
        :to_sym %>

  <div class="tariff-markdown">
    <%= govspeak t '.body', scheme_title: form.object.scheme_title %>

    <%= render 'shared/details', summary: t('.notes.summary'),
                                 content: govspeak(t('.notes.content')) %>
  </div>
<% end %>

<%= render 'shared/details', summary: t('.about.summary') do %>
  <%# full key necessary for i18n because we're inside shared/details %>
  <p>
    <%= t 'rules_of_origin.steps.product_specific_rules.about.content.commodity',
          commodity_code: current_step.commodity_code %>
    <br />
    <%= current_step.commodity_description %>
  </p>

  <p>
    <%= link_to t('rules_of_origin.steps.product_specific_rules.about.content.link',
                  commodity_code: current_step.commodity_code),
                commodity_path(current_step.commodity_code) %>
  </p>
<% end %>
