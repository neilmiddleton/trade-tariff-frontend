<%- xi_import_measures = xi_declarable.import_measures.for_country(@search.country) %>
<%- uk_import_measures = uk_declarable.import_measures.for_country(@search.country) %>

<!-- CUSTOMS DUTIES -->
<% if (collection = xi_import_measures.customs_duties).present? %>
  <%= render 'measures/meursing_form' if xi_declarable.meursing_code? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'Customs duties',
    collection: collection.sort_by(&:key),
    css_id: 'customs_duties' }
  %>
<% end %>

<!-- TRADE REMEDIES -->
<% if (collection = xi_import_measures.trade_remedies).present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'Trade Remedies, safeguards and retaliatory duties',
    collection: collection.sort_by(&:key),
    css_id: 'trade_remedies' }
  %>
<% end %>

<!-- VAT & EXCISE -->
<% if (collection = uk_import_measures.vat_excise).present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'VAT and excise',
    collection: collection.sort_by(&:key),
    css_id: 'vat_excise' }
  %>
<% end %>

<!-- XI IMPORT CONTROLS -->
<% if (collection = xi_import_measures.import_controls).present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: 'EU import controls',
    collection: collection.sort_by(&:key),
    hide_duty_rate: true,
    css_id: 'xi_import_controls' }
  %>
<% end %>

<!-- UK IMPORT CONTROLS -->
<% if (collection = uk_import_measures.import_controls).present? %>
  <%= render partial: 'measures/grouped/table', locals: {
    caption: TradeTariffFrontend::ServiceChooser.uk? ? 'Import controls' : 'UK import controls',
    collection: collection.sort_by(&:key),
    hide_duty_rate: true,
    css_id: 'uk_import_controls' }
  %>
<% end %>
